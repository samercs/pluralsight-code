@model dynamic

@{
    ViewBag.Title = "title";

}

<h2>Test Custom Bind</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBox("Name", "", new {@class="form-control"})
    </div>
    <div class="form-group">
        <label>Day:</label>
        @Html.TextBox("Day", "", new { @class = "form-control", @type="number" })
    </div>
    <div class="form-group">
        <label>Month:</label>
        @Html.TextBox("Month", "", new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        <label>Year:</label>
        @Html.TextBox("Year", "", new { @class = "form-control", @type = "number" })
    </div>
    <button type="submit" class="btn btn-default">Save Data Bind </button>

}
